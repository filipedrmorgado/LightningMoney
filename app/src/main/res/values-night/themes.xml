<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LightningMoney" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Text.BoldTitle" parent="">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="color">@color/black</item>
    </style>

    <style name="TextRegularDescription" parent="">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextToolbarStyle" parent="">
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextBottomNote" parent="">
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="BtnLightningWhiteText" parent="">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="BtnLightningPurpleText" parent="">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/lightningColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>



</resources>